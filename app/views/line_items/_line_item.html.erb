<div class="row">
  <div class="col-sm">
    Amount: <%= line_item.quantity %>
  </div>
  <div class="col-sm">
    <figure>
      <%= image_tag(line_item.instrument.image_url(:thumb)) %>
    </figure>
  </div>
  <div class="col-sm">
    <%= link_to 'Remove Item', line_item, method: :delete, data: { confirm: "Are you sure? " }, class: "" %>
  </div>
</div>

<div>
  <strong><%= line_item.instrument.title %></strong>
  <div>
    <div>
      <%= truncate(line_item.instrument.description, length: 140) %>
    </div>
    <div>
      <strong class="f4"><%= number_to_currency(line_item.total_price) %></strong>
    </div>
  </div>
</div>

<hr/ >