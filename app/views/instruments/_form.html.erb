<div>
  <div>

    <%= simple_form_for @instrument, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

        <div">

          <div>
            <div>
              <%= f.input :title , required: true, input_html: { class: ""}, wrapper: false, label_html: { class:"" } %>
            </div>
          </div>

          <div>
            <div>
              <%= f.input :price, required: true, input_html: { class:"", maxlength: 7  }, wrapper: false, label_html: { class:"" } %>
            </div>
          </div>

        </div>

        <div>
          <div>
            <%= f.input :model, required: true, input_html: { class:"" }, wrapper: false, label_html: { class:"" } %>
          </div>
        </div>

        <div>
          <div>
            <%= f.input :description, required: true, input_html: { class:"" }, wrapper: false, label_html: { class:"" } %>
          </div>
        </div>

        <div>
          <div>
            <div>
              <label>Brand</label>
              <div>
                <span>
                  <%= f.input_field :brand, collection: Instrument::BRAND, prompt: "Select brand" %>
                </span>
                <span>
                  <i class="fa fa-tag"></i>
                </span>
              </div>
            </div>
           </div>

          <div>
            <div>
              <label>Finish</label>
              <div>
                <span>
                  <%= f.input_field :finish, collection: Instrument::FINISH, prompt: "Select finish" %>
                </span>
                <span>
                  <i class="fa fa-paint-brush"></i>
                </span>
              </div>
            </div>
           </div>

          <div>
            <div>
              <label>Condition</label>
              <div>
                <span>
                  <%= f.input_field :condition, collection: Instrument::CONDITION, prompt: "Select condition" %>
                </span>
                <span>
                  <i class="fa fa-paint-brush"></i>
                </span>
              </div>
            </div>
           </div>
         </div>

        <div>
          <div>
            <label>Add images</label>
              <div>
              <label>
                <%= f.input :image, as: :file, input_html: { class:"" }, label: false, wrapper: false %>
                  <span>
                    <span><i class="fa fa-upload"></i></span>
                    <span>Choose a fileâ€¦</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
          <output id="list"></output>
        <hr />

        <div>
          <div>
            <%= f.button :submit, class: '' %>
            <%= link_to 'Cancel', instruments_path, class:'' %>
          </div>
        </div>

      <% end %>
  </div>
</div>
