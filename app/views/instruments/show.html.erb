<% content_for :body_class, 'bg-light' %>

<section>
  <div>
    <div>
      <h1><%= @instrument.title %></h1>

      <ul class="pv1">
        <% if @instrument.brand? %>
        <li class="inline-block pr3"><%= @instrument.brand %></li>
        <% end %>

        <li class="inline-block pr3"><%= @instrument.model %></li>

        <% if @instrument.condition? %>
        <li class="inline-block pr3"><%= @instrument.condition %></li>
        <% end %>
      </ul>

      <div>
        <%= image_tag(@instrument.image_url(:default), class: "img-fluid") %>
      </div>

      <div class="pa4 mt3 bg-white border-radius-3">

      <h3>Description</h3>
      <%= @instrument.description %>


      <h3 class="pt5">Product Specs</h3>

      <table">
        <% if @instrument.condition %>
        <tr>
          <td>Condition:</td>
          <td><%= @instrument.condition %></td>
        </tr>
        <% end %>

        <% if @instrument.finish %>
          <tr>
            <td>Finish:</td>
            <td><%= @instrument.finish %></td>
          </tr>
        <% end %>

        <% if @instrument.brand %>
          <tr>
            <td>Brand:</td>
            <td><%= @instrument.brand %></td>
          </tr>
        <% end %>

        <tr>
          <td>Model:</td>
          <td><%= @instrument.model %></td>
        </tr>
      </table>
    </div>
    </div>
    <div>
      <div class="bg-white pa4 border-radius-3">
        <h4><%= number_to_currency(@instrument.price) %></h4>
        <p class="mb4">Sold by <%= @instrument.user.name %></p>
        <%= button_to 'Add to cart', line_items_path(instrument_id: @instrument), class: '' %>
      </div>
    </div>
  </div>

  <% if instrument_author(@instrument) %>
    <%= link_to 'Edit', edit_instrument_path(@instrument), class: '' %>
  <% end %>
</section>