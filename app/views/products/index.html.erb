<% content_for :header do %>
<section class="container">
  <div>
    <div class="row">
      <h4>
        Browse the latest products on Flanger
      </h4>
    </div>
  </div>
</section>
<% end %>

<div class="pt4 row">
  <% @products.each do |product| %>

    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <%= link_to image_tag(product.image_url(:thumb),class: 'card-img-top'), product %>

        <% if product.condition? %>
          <div class="floating-badge">
            <span class="badge badge-dark"><%= product.condition %></span>
          </div>
        <% end %>
        


        <div class="card-body nmt">

          <h3 class="fw7 f4"><%= link_to product.title, product %></h3>

          <p class="fg pt1">Sold by <%= product.user.name %></p>

          <p class="f3 fw6 pt2"><%= number_to_currency(product.price) %></p>

          <% if product_author(product) %>
             <%= link_to 'Edit', edit_product_path(product), class: "" %>
             <%= link_to 'Delete', product, method: :delete, data: { confirm: "Are you sure ?" }, class: "" %>
          <% end %>

        </div>
      </div>
    </div>
  <% end %>
</div>